<!DOCTYPE html>
<html>
  <head>
    <title>CurrencyTracker</title>
    <%= stylesheet_link_tag :application %>
    <%= csrf_meta_tag %>
  </head>
  <body>

    <header>
      <h1>CurrencyTracker</h1>
      <nav>
        <ul>
          <li><%= link_to "Currencies", currencies_path %></li>
          <li><%= link_to "Countries", countries_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to "#{current_user.email} Profile", destroy_user_session_path, method: 'delete' %></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: 'delete' %></li>
          <% else %>
            <li><%= link_to 'User Sign In', new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </header>

    <%= yield %>

    <footer>
      CurrencyTracker &copy; Copyright 2011 by Smart Enterprises.
    </footer>
  <%= javascript_include_tag 'application' %>
  </body>
</html>
