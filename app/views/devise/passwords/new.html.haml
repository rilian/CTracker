- content_for :page_title, t("page.titles.forgot_password")

= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: {:method => :post}, :layout => :horizontal) do |f|
  = f.email_field :email, autofocus: true
  = f.form_group do
    = f.submit t("form.forgot_password.buttons.submit")

= render "devise/shared/links"
